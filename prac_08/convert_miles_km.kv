BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ''
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'

            Button:
                text: 'Down'

    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculate(input_miles.text)

    Label:
        text: app.message
        color: (1, 1, 0, 1)
        id: output_label