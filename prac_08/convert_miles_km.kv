BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_miles
            text: ''
            on_text: app.handle_calculate(self.text)

        BoxLayout:
            orientation: 'vertical'

            Button:
                text: 'Up'
                on_press: app.handle_increment(1)

            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_calculate(input_miles.text)

    Label:
        text: app.message
        color: (1, 1, 0, 1)
        id: output_label